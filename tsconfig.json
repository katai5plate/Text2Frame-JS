{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
